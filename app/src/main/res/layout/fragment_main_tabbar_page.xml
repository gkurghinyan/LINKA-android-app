<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.linka.lockapp.aos.module.widget.ToggleSwipeableViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </com.linka.lockapp.aos.module.widget.ToggleSwipeableViewPager>

    <LinearLayout
        android:background="@color/linka_blue_tabbar"
        android:orientation="horizontal"
        android:id="@+id/tab_bar"
        android:layout_marginBottom="0dp"
        android:layout_width="match_parent"
        android:layout_height="59dp">

        <LinearLayout android:background="@drawable/tabbar_icon_state" android:id="@+id/t1" android:gravity="center" android:orientation="vertical" android:layout_weight="1" android:layout_width="0dp" android:layout_height="match_parent">
            <ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/bottom_icon_activity" />
        </LinearLayout>


        <LinearLayout android:background="@drawable/tabbar_icon_state" android:id="@+id/t2" android:gravity="center" android:orientation="vertical" android:layout_weight="1" android:layout_width="0dp" android:layout_height="match_parent">
            <ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/bottom_icon_location" />
        </LinearLayout>


        <LinearLayout android:background="@drawable/tabbar_icon_state" android:id="@+id/t3" android:gravity="center" android:orientation="vertical" android:layout_weight="1" android:layout_width="0dp" android:layout_height="match_parent">
            <ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/bottom_icon_profile" />
        </LinearLayout>


        <LinearLayout android:background="@drawable/tabbar_icon_state" android:id="@+id/t4" android:gravity="center" android:orientation="vertical" android:layout_weight="1" android:layout_width="0dp" android:layout_height="match_parent">
            <ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/bottom_icon_settings" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>