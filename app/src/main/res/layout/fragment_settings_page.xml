            android:layout_height="wrap_content"

            android:orientation="vertical">

            <com.linka.lockapp.aos.module.widget.LinkaTextView
                style="@style/section_header"
                android:visibility="gone"
                android:text="@string/linka_lock"
                />
            <LinearLayout
                android:background="@color/linka_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/row_phoneless_passcode"
                    style="@style/settings_row"
                    >
                    <LinearLayout style="@style/settings_row_text_layout" android:orientation="vertical">
                        <com.linka.lockapp.aos.module.widget.LinkaTextView style="@style/settings_row_text" android:text="@string/phoneless_passcode"/>
                        <com.linka.lockapp.aos.module.widget.LinkaTextView style="@style/settings_row_text_desc" android:text="" android:id="@+id/field_pac"/>
