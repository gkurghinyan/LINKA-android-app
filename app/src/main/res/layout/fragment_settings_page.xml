                        android:src="@drawable/icon_forward_arrow"/>



                </LinearLayout>
                <View style="@style/menu_divider"/>-->
                <LinearLayout
                    android:id="@+id/row_firmware_version"
                    style="@style/settings_row"
                    >
                    <LinearLayout style="@style/settings_row_text_layout" android:orientation="vertical">
                        <com.linka.lockapp.aos.module.widget.LinkaTextView style="@style/settings_row_text" android:text="@string/firmware_version"/>
                        <com.linka.lockapp.aos.module.widget.LinkaTextView style="@style/settings_row_text_desc" android:id="@+id/firmware_version" android:text="@string/firmware_version_desc"/>
                    </LinearLayout>

                    <com.linka.lockapp.aos.module.widget.LinkaButton
