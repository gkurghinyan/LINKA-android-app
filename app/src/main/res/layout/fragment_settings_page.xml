                        android:layout_gravity="center"
                        style="@style/linka_button_nomargin"
                        android:text="Update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <View style="@style/menu_divider"/>
                <LinearLayout
                    android:id="@+id/row_mac_id"
                    style="@style/settings_row"
                    >
                    <LinearLayout style="@style/settings_row_text_layout" android:orientation="vertical">
                        <com.linka.lockapp.aos.module.widget.LinkaTextView style="@style/settings_row_text" android:text="Mac Address"/>
