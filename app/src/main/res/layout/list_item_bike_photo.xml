<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.joooonho.SelectableRoundedImageView
        android:layout_centerInParent="true"
        android:id="@+id/image"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        app:sriv_left_top_corner_radius = "10dp"
        app:sriv_right_top_corner_radius = "10dp"
        app:sriv_left_bottom_corner_radius = "10dp"
        app:sriv_right_bottom_corner_radius = "10dp"
        app:sriv_border_width="2dip"
        app:sriv_border_color="@color/linka_gray" />

    <LinearLayout
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/image"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/image_cover_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Cover Image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>