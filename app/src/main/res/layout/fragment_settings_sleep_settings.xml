<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <com.linka.lockapp.aos.module.widget.LinkaTextView
            android:id="@+id/linkaTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/sleep_settings_desc"
            android:textColor="@color/linka_gray"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="vertical">

            <com.linka.lockapp.aos.module.widget.LinkaTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/linka_gray"
                android:text="@string/sleep_unlock_desc"/>

            <SeekBar
                style="android:style/Theme.Holo.Light.DarkActionBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:max="28"
                android:progress="1"
                android:thumbTint="@color/linka_blue"
                android:progressTint="@color/linka_blue"
                android:id="@+id/unlock_sleep_timer" />

            <com.linka.lockapp.aos.module.widget.LinkaTextViewRegular
                android:id="@+id/unlock_sleep_timer_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/linka_blue"
                android:textSize="24sp"
                android:text="1 min"/>

            <com.linka.lockapp.aos.module.widget.LinkaTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/linka_gray"
                android:gravity="center"
                android:textSize="14sp"
                android:text="@string/sleep_unlock_hint"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/linka_light_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="vertical">

            <com.linka.lockapp.aos.module.widget.LinkaTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/linka_gray"
                android:text="@string/sleep_lock_desc"/>

            <SeekBar
                style="android:style/Theme.Holo.Light.DarkActionBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:max="28"
                android:progress="1"
                android:thumbTint="@color/linka_blue"
                android:progressTint="@color/linka_blue"
                android:id="@+id/lock_sleep_timer" />

            <com.linka.lockapp.aos.module.widget.LinkaTextViewRegular
                android:id="@+id/lock_sleep_timer_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/linka_blue"
                android:textSize="24sp"
                android:text="1 min"/>

            <!--<com.linka.lockapp.aos.module.widget.LinkaTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/linka_gray"
                android:gravity="center"
                android:textSize="13sp"
                android:text="@string/sleep_lock_hint"/>-->

        </LinearLayout>

        <com.linka.lockapp.aos.module.widget.LinkaTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/linka_gray"
            android:gravity="center"
            android:textSize="14sp"
            android:text="@string/sleep_note"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.linka.lockapp.aos.module.widget.LinkaTextViewRegular
                android:id="@+id/battery_estimated_days_remaining"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="XXX estimated days remaining"
                android:textColor="@color/linka_blue"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/sleep_battery_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_activity_battery_mid_x" />

                <com.linka.lockapp.aos.module.widget.LinkaTextView
                    android:id="@+id/sleep_battery_percent"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:text="(xxx%)"
                    android:textColor="@color/linka_gray"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <com.linka.lockapp.aos.module.widget.LinkaButton
                android:id="@+id/save"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:textSize="16sp"
                android:text="@string/save"
                style="@style/linka_blue_button_nomargin"/>

            <com.linka.lockapp.aos.module.widget.LinkaButton
                android:id="@+id/reset_to_default"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:textSize="16sp"
                android:text="@string/reset_default"
                style="@style/linka_blue_button_nomargin"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>