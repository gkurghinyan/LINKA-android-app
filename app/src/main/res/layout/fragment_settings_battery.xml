<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_back_color"
    android:orientation="vertical"
    tools:context=".module.pages.settings.SettingsBatteryFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:paddingBottom="@dimen/margin_15"
        android:paddingStart="@dimen/margin_x"
        android:paddingTop="@dimen/margin_15"
        android:text="@string/battery_settings_description"
        android:textColor="@color/dark_gray_text"
        android:textSize="@dimen/text_size_xm" />

    <View style="@style/menu_divider" />

    <LinearLayout
        android:id="@+id/high_performance"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_l"
        android:background="@color/linka_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/margin_x"
            android:layout_weight="8"
            android:text="High Performance"
            android:textColor="@color/linka_black_transparent"
            android:textSize="@dimen/text_size_normal" />

        <ImageView
            android:id="@+id/high_performance_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/margin"
            android:layout_weight="1"
            android:src="@drawable/check_icon"
            android:visibility="gone" />
    </LinearLayout>

    <View style="@style/menu_divider" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_l"
        android:paddingEnd="@dimen/margin_x"
        android:paddingStart="@dimen/margin_x"
        android:paddingTop="@dimen/margin_mm"
        android:text="Your lock will sleep after 10 hours."
        android:textColor="@color/search_text"
        android:textSize="@dimen/text_size_xm" />

    <View style="@style/menu_divider" />

    <LinearLayout
        android:id="@+id/normal_performance"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_l"
        android:background="@color/linka_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/margin_x"
            android:layout_weight="8"
            android:text="Normal"
            android:textColor="@color/linka_black_transparent"
            android:textSize="@dimen/text_size_normal" />

        <ImageView
            android:id="@+id/normal_performance_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/margin"
            android:layout_weight="1"
            android:src="@drawable/check_icon"
            android:visibility="gone" />
    </LinearLayout>

    <View style="@style/menu_divider" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_l"
        android:paddingEnd="@dimen/margin_x"
        android:paddingStart="@dimen/margin_x"
        android:paddingTop="@dimen/margin_mm"
        android:text="Your lock will sleep after 2 hours."
        android:textColor="@color/search_text"
        android:textSize="@dimen/text_size_xm" />

    <View style="@style/menu_divider" />

    <LinearLayout
        android:id="@+id/low_performance"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_l"
        android:background="@color/linka_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/margin_x"
            android:layout_weight="8"
            android:text="Low"
            android:textColor="@color/linka_black_transparent"
            android:textSize="@dimen/text_size_normal" />

        <ImageView
            android:id="@+id/low_performance_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/margin"
            android:layout_weight="1"
            android:src="@drawable/check_icon"
            android:visibility="gone" />
    </LinearLayout>

    <View style="@style/menu_divider" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_l"
        android:paddingEnd="@dimen/margin_x"
        android:paddingStart="@dimen/margin_x"
        android:paddingTop="@dimen/margin_mm"
        android:text="Your lock will sleep after 5 minutes."
        android:textColor="@color/search_text"
        android:textSize="@dimen/text_size_xm" />

    <View style="@style/menu_divider" />

</LinearLayout>