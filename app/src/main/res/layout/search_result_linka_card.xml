<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/layout">

    <TextView
        android:id="@+id/linka_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John's LINKA"
        android:textColor="@color/linka_white"
        android:textSize="@dimen/text_size_x" />

    <TextView
        android:id="@+id/linka_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AB:BC"
        android:textColor="@color/linka_white"
        android:textSize="@dimen/text_size_xm"
        android:layout_marginTop="@dimen/margin_mm"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/linka_white"
        android:layout_marginTop="@dimen/margin_mm"
        android:layout_marginBottom="@dimen/margin"/>


</LinearLayout>