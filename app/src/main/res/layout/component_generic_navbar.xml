<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/nav_bar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_marginTop="@dimen/status_bar_offset"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginBottom="0dp"
    android:contentInsetStart="0dp"
    android:contentInsetLeft="0dp"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/title"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_marginLeft="49dp"
        android:layout_marginRight="49dp"
        android:singleLine="true"
        style="@style/AppNavBarText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/linka_white"
        android:text="品牌介紹"/>

    <LinearLayout
        android:layout_marginLeft="@dimen/activity_horizontal_margin_sm"
        android:gravity="center|left"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:id="@+id/nav_bar_left_icons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.linka.lockapp.aos.module.widget.BadgeIconView
            android:id="@+id/menu" app:iconSrc="@drawable/icon_menu" android:layout_width="wrap_content" android:layout_height="wrap_content" />

        <com.linka.lockapp.aos.module.widget.BadgeIconView
            android:id="@+id/back" app:iconSrc="@drawable/icon_back_arrow" android:layout_width="wrap_content" android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginRight="@dimen/activity_horizontal_margin_sm"
        android:gravity="center|right"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:id="@+id/nav_bar_right_icons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/r1"
            android:textColor="@color/linka_white"
            android:text="@string/edit"
            android:padding="@dimen/activity_horizontal_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</RelativeLayout>
