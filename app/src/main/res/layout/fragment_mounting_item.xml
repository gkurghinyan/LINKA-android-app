<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.pages.walkthrough.MountingItemFragment">

   <ImageView
       android:id="@+id/mounting_image"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_gravity="center"
       android:layout_marginStart="@dimen/margin_dx"
       android:layout_marginEnd="@dimen/margin_dx"
       android:layout_marginBottom="@dimen/text_size_xl"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

   <TextView
       android:id="@+id/dot1_text"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="@dimen/margin_mm"
       android:text="@string/recommended_most_secure"
       android:textAllCaps="true"
       android:textColor="@color/linka_white"
       android:textSize="@dimen/text_size_normal"
       android:visibility="gone"
       app:layout_constraintStart_toStartOf="@+id/mounting_image"
       app:layout_constraintTop_toBottomOf="@+id/mounting_image" />


</android.support.constraint.ConstraintLayout>