<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_gradient"
    android:id="@+id/root"
    tools:context=".module.pages.pac.SetPac3">

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/green_linka"
        app:layout_constraintBottom_toBottomOf="@id/guideline1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:gravity="center"
        android:text="@string/set_your_phoneless_access_code"
        android:textColor="@color/linka_white"
        android:textSize="@dimen/text_size_xm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/title_text">


        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />

        <ImageView
            android:id="@+id/pin_value_1"
            android:layout_width="@dimen/margin_x"
            android:layout_height="@dimen/margin_x"
            android:background="@drawable/pac_digit_blue2"
            android:gravity="center" />

        <ImageView
            android:id="@+id/pin_value_1_filled"
            android:layout_width="@dimen/margin_x"
            android:layout_height="@dimen/margin_x"
            android:background="@drawable/pac_digit_white1"
            android:gravity="center"
            android:visibility="gone" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/pin_value_2"
            android:layout_width="@dimen/margin_x"
            android:layout_height="@dimen/margin_x"
            android:background="@drawable/pac_digit_blue2"
            android:gravity="center" />

        <ImageView
            android:id="@+id/pin_value_2_filled"
            android:layout_width="@dimen/margin_x"
            android:layout_height="@dimen/margin_x"
            android:background="@drawable/pac_digit_white1"
            android:gravity="center"
            android:visibility="gone" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/pin_value_3"
            android:layout_width="@dimen/margin_x"
            android:layout_height="@dimen/margin_x"
            android:background="@drawable/pac_digit_blue2"
            android:gravity="center" />

        <ImageView
            android:id="@+id/pin_value_3_filled"
            android:layout_width="@dimen/margin_x"
            android:layout_height="@dimen/margin_x"
            android:background="@drawable/pac_digit_white1"
            android:gravity="center"
            android:visibility="gone" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/pin_value_4"
            android:layout_width="@dimen/margin_x"
            android:layout_height="@dimen/margin_x"
            android:background="@drawable/pac_digit_blue2"
            android:gravity="center" />

        <ImageView
            android:id="@+id/pin_value_4_filled"
            android:layout_width="@dimen/margin_x"
            android:layout_height="@dimen/margin_x"
            android:background="@drawable/pac_digit_white1"
            android:gravity="center"
            android:visibility="gone" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />


    </LinearLayout>

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight=".4"
        android:background="@color/keyboard_color"
        android:shrinkColumns="1"
        android:weightSum="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1">

            <com.linka.lockapp.aos.module.widget.LinkaTextView
                android:id="@+id/pin_key_1"
                style="@style/key_pad_cell"
                android:text="1" />


            <com.linka.lockapp.aos.module.widget.LinkaTextView
                android:id="@+id/pin_key_2"
                style="@style/key_pad_cell"
                android:text="2" />

            <com.linka.lockapp.aos.module.widget.LinkaTextView
                android:id="@+id/pin_key_3"
                style="@style/key_pad_cell"
                android:text="3" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1">

            <com.linka.lockapp.aos.module.widget.LinkaTextView
                android:id="@+id/pin_key_4"
                style="@style/key_pad_cell"
                android:layout_marginEnd="3dp"
                android:layout_marginStart="3dp"
                android:text="4" />


            <com.linka.lockapp.aos.module.widget.LinkaTextView
                android:id="@+id/pin_key_5"
                style="@style/key_pad_cell"
                android:layout_marginEnd="3dp"
                android:layout_marginStart="3dp"
                android:text="5" />


            <com.linka.lockapp.aos.module.widget.LinkaTextView
                android:id="@+id/pin_key_6"
                style="@style/key_pad_cell"
                android:layout_marginEnd="3dp"
                android:layout_marginStart="3dp"
                android:text="6" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1">

            <com.linka.lockapp.aos.module.widget.LinkaTextView
                android:id="@+id/pin_key_7"
                style="@style/key_pad_cell"
                android:text="7" />


            <com.linka.lockapp.aos.module.widget.LinkaTextView
                android:id="@+id/pin_key_8"
                style="@style/key_pad_cell"
                android:text="8" />


            <com.linka.lockapp.aos.module.widget.LinkaTextView
                android:id="@+id/pin_key_9"
                style="@style/key_pad_cell"
                android:text="9" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1">


            <com.linka.lockapp.aos.module.widget.LinkaTextView
                android:id="@+id/pin_key_cancel"
                style="@style/key_pad_cell"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="" />


            <com.linka.lockapp.aos.module.widget.LinkaTextView
                android:id="@+id/pin_key_0"
                style="@style/key_pad_cell"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="" />


            <ImageView
                android:id="@+id/pin_key_delete"
                style="@style/key_pad_cell"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/numpad_back" />
        </TableRow>
    </TableLayout>

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent" />
</android.support.constraint.ConstraintLayout>