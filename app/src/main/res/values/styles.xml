<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary_text</item>
    </style>

    <style name="full_screen_dialog_fragment" parent="android:Theme.Dialog">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowBackground">@color/linka_dark_bg_transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="full_screen_dialog_fragment_nodim" parent="full_screen_dialog_fragment">
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <style name="bottom_dialog_fragment" parent="full_screen_dialog_fragment">
        <item name="android:windowAnimationStyle">@style/bottom_dialog_fragment_animation.Window</item>
    </style>

    <style name="bottom_dialog_fragment_animation.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/anim_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/anim_bottom_out</item>
    </style>



    <style name="right_dialog_fragment" parent="full_screen_dialog_fragment">
        <item name="android:windowAnimationStyle">@style/right_dialog_fragment_animation.Window</item>
    </style>

    <style name="right_dialog_fragment_animation.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/anim_right_in</item>
        <item name="android:windowExitAnimation">@anim/anim_right_out</item>
    </style>



    <style name="AppNavBarText" parent="AppTheme">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/linka_white</item>
        <item name="android:textSize">@dimen/item_text_big_sp</item>
    </style>

    <style name="AppBadge" parent="AppTheme">
        <item name="android:textSize">@dimen/item_text_smaller_sp</item>
        <item name="android:textColor">@color/linka_white</item>
        <item name="android:background">@drawable/badge</item>
    </style>

    <style name="AppBadgeBig" parent="AppBadge">
        <item name="android:textSize">@dimen/item_text_sp</item>
        <item name="android:background">@drawable/badge_big</item>
    </style>

    <style name="text_smaller" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/item_text_smaller_sp</item>
    </style>

    <style name="text_small" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/item_text_small_sp</item>
    </style>

    <style name="text_small_bold" parent="text_small"><item name="android:textStyle">bold</item></style>

    <style name="text_med" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/item_text_sp</item>
    </style>

    <style name="text_med_bold" parent="text_med"><item name="android:textStyle">bold</item></style>

    <style name="text_med_white" parent="text_med"><item name="android:textColor">@color/linka_white</item></style>
    <style name="text_med_white_bold" parent="text_med_bold"><item name="android:textColor">@color/linka_white</item></style>



    <style name="text_large" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/item_text_large_sp</item>
    </style>

    <style name="text_large_bold" parent="text_large">
        <item name="android:textStyle">bold</item>
    </style>


    <style name="text_large_white" parent="text_large"><item name="android:textColor">@color/linka_white</item></style>
    <style name="text_large_bold_white" parent="text_large_bold"><item name="android:textColor">@color/linka_white</item></style>











    /* LINKA BUTTONS */

    <style name="linka_button_nomargin" parent="linka_text">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/item_text_big_sp</item>
    </style>
    <style name="linka_blue_button_nomargin" parent="linka_button_nomargin">
        <item name="android:background">@drawable/button_blue_v2</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="linka_red_button_nomargin" parent="linka_button_nomargin">
        <item name="android:background">@drawable/button_red</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="linka_gray_outline_button_nomargin" parent="linka_button_nomargin">
        <item name="android:background">@drawable/button_gray_outline</item>
        <item name="android:textColor">@color/linka_dark_gray</item>
    </style>

    <style name="linka_white_outline_black_button_nomargin" parent="linka_button_nomargin">
        <item name="android:background">@drawable/button_white_v2</item>
        <item name="android:textColor">@color/linka_blue</item>
    </style>

    <style name="linka_black_button_nomargin" parent="linka_button_nomargin">
        <item name="android:background">@drawable/button_black</item>
        <item name="android:textColor">@color/linka_white</item>
    </style>






    /* LINKA TEXT */
    <style name="linka_text">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/item_text_sp</item>
        <item name="android:textColor">@color/linka_blue</item>
    </style>

    <style name="linka_white_text" parent="linka_text">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="linka_gray_text" parent="linka_text">
        <item name="android:textColor">@color/linka_gray</item>
    </style>

    <style name="linka_dark_gray_text" parent="linka_text">
        <item name="android:textColor">@color/linka_dark_gray</item>
    </style>
    <style name="linka_red_text" parent="linka_text">
        <item name="android:textColor">@color/linka_red</item>
    </style>
    <style name="linka_dark_red_text" parent="linka_text">
        <item name="android:textColor">@color/linka_dark_red</item>
    </style>




    <style name="linka_text_edit_v2_field">
        <item name="android:textSize">@dimen/item_text_sp</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">@color/linka_white</item>
        <item name="android:textColorHint">@color/linka_white_transparent_3</item>
        <item name="android:layout_marginBottom">@dimen/activity_horizontal_margin</item>
        <item name="android:background">@drawable/edit_text_v2</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
    </style>





    <style name="settings_row">
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_row_height</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="settings_row_switch" parent="Material.Widget.Switch">
        <item name="android:layout_width">74dp</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="settings_row_text_layout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="settings_row_text">
        <item name="android:textSize">@dimen/item_text_sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="settings_row_text_desc">
        <item name="android:textSize">@dimen/item_text_smaller_sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--keypad-->
    <style name="key_pad_cell" parent="linka_dark_gray_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/linka_white</item>

    </style>

    <style name="key_pad_border_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:background">#DEDEDE</item>
    </style>
    <style name="key_pad_border_vertical">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>









    <style name="menu_divider">
        <item name="android:background">@color/menu_divider</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
    </style>


    <style name="menu_icon_container">
        <item name="android:layout_width">@dimen/menu_icon_container_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>

    </style>
    <style name="menu_icon">
        <item name="android:layout_width">@dimen/menu_icon_large_size</item>
        <item name="android:layout_height">@dimen/menu_icon_large_size</item>
        <!--<item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>-->

    </style>
    <style name="menu_text">
        <item name="android:textSize">@dimen/item_text_sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>

    </style>
    <style name="menu_section">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/menu_item_large_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="menu_small_icon">
        <item name="android:layout_width">@dimen/menu_icon_small_size</item>
        <item name="android:layout_height">@dimen/menu_icon_small_size</item>
    </style>
    <style name="menu_small_text" parent="menu_text">
        <item name="android:textSize">@dimen/item_text_sp</item>
        <item name="android:textColor">@color/menu_gray_text</item>
    </style>
    <style name="menu_small_section" parent="menu_section">
        <item name="android:layout_height">@dimen/menu_item_small_height</item>
    </style>



    <style name="section_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/section_header_height</item>
        <item name="android:textSize">@dimen/item_text_small_sp</item>
        <item name="android:background">@color/primary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">@color/section_header_text</item>
    </style>

    <!--CHAT STYLE _________________________ -->


    <style name="ZopimChatTheme" parent="AppTheme">
        <!--Chat UI uses the toolbar so no need to show ActionBar-->
        <item name="windowActionBar">false</item>
        <!-- Customize chat theme here. -->
        <item name="colorAccent">@color/linka_blue</item>
        <item name="colorPrimary">@color/linka_blue_tabbar</item>
        <item name="colorPrimaryDark">@color/linka_dark_gray</item>
    </style>

    <style name="no_agents_button">
        <item name="android:background">@color/linka_blue</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!--Customize toolbar that replaces action bar-->
    <style name="zopim_toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <!--Customize where chat widget appears-->
    <style name="chat_widget" parent="_chat_widget">
        <item name="anchor">bottom_left</item>
    </style>

    <!--Customize chat colors-->
    <color name="chat_bubble_visitor">@color/linka_blue</color>

    <declare-styleable name="MyHorizontalProgress">
        <attr name="animationDuration" format="integer"/>
        <attr name="gradientStartColor" format="color"/>
        <attr name="gradientEndColor" format="color"/>
    </declare-styleable>

</resources>
